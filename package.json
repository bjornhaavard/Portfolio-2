  "devDependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "@types/node": "^22.15.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.8.3"
  }
}
