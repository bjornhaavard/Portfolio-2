{
  "name": "portfolio-2",
  "version": "1.0.0",
  "description": "My portfolio",
  "main": "script.js",
  "scripts": {
    "deploy:docs": "rm -rf docs && mkdir docs && cp index.html docs/ && cp -r css docs/ && cp -r dist docs/ && cp -r images docs/" ,
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "tailwindcss -i ./css/tailwind.css -o ./css/styles.css",
    "watch:css": "tailwindcss -i ./css/tailwind.css -o ./css/styles.css --watch",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build": "npm run build:ts && npm run build:css",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bjornhaavard/Portfolio-2.git"
  },
