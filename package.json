{
  "name": "portfolio-2",
  "version": "1.0.0",
  "description": "My portfolio",
  "main": "script.js",
  "scripts": {
    "deploy:docs": "rm -rf docs && mkdir docs && cp index.html docs/ && cp -r css docs/ && cp -r dist docs/ && cp -r images docs/",
    "build:css": "tailwindcss -i ./css/tailwind.css -o ./css/styles.css",
    "watch:css": "tailwindcss -i ./css/tailwind.css -o ./css/styles.css --watch",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build": "npm run build:ts && npm run build:css",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:css\"",
    "deploy": "npm run build && npm run deploy:docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bjornhaavard/Portfolio-2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bjornhaavard/Portfolio-2/issues"
  },
  "homepage": "https://github.com/bjornhaavard/Portfolio-2#readme",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
